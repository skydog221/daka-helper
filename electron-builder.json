{
  "appId": "com.skydog221.daka-helper",
  "productName": "打卡剪辑助手",
  "directories": {
    "output": "dist/installer"
  },
  "files": [
    "main.js",
    "dist/electron/**/*",
    "src/core/**/*",
    "src/encoders/**/*",
    "src/adapters/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist/web",
      "to": "web-version",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "nsis",
    "icon": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "打卡剪辑助手"
  }
}
